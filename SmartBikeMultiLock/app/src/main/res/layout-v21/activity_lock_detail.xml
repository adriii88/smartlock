<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cat.ravnsbjerg34.smartbikemultilock.LockDetailActivity">

    <TextView
        android:id="@+id/lock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:text="@string/lockName"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/switch_btn"
        app:layout_constraintEnd_toStartOf="@+id/status"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/switchLock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_name" />

    <ImageButton
        android:id="@+id/status"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="64dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/statusIconItem"
        android:foregroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/lock_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lock_name"
        app:layout_constraintTop_toTopOf="@+id/lock_name"
        app:srcCompat="@drawable/unlocked" />
    
</android.support.constraint.ConstraintLayout>
